<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_height="match_parent" android:layout_width="match_parent"
                                             android:id="@+id/linearLayout">


    <TextView
            android:layout_width="349dp"
            android:layout_height="71dp"
            android:textSize="20sp"
            android:id="@+id/total_weekly"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/container" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="400dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/container" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.511" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="420dp"/>


    <com.jjoe64.graphview.GraphView
            android:id="@+id/graphWeekly"
            android:layout_width="339dp"
            android:layout_height="196dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/container" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="400dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/total_weekly"/>

    <com.jjoe64.graphview.GraphView
            android:id="@+id/graphWeeklyTime"
            android:layout_width="337dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toStartOf="@+id/container"
            android:layout_marginEnd="21dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="400dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/graphWeekly">
    </com.jjoe64.graphview.GraphView>


    <android.support.v4.widget.DrawerLayout
            android:layout_width="384dp"
            android:layout_height="513dp"
            android:id="@+id/container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>